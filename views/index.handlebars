<h1>Eat-Da-Burger!</h1>

<div class="container">
  <div class="row">
    <div class="col-md-1"></div>
    <div class="col-md-5 burgers">

      <h2>Uneaten Burgers</h2>
      <ul style="list-style-type:none;">
        {{#each burger}}
        {{#unless this.devoured}}
          <form class="button-size devour-form">
            <input input type="text" class="form-control" type="text" placeholder="{{this.id}} . {{this.burger_name}}" readonly>
            <button type="submit" data-id={{this.id}} class="change-devoured w3-button w3-right">Devour it!</button>
          </form>
        {{/unless}}
        {{/each}}


      </ul>
    </div>

    <div class="col-md-5 burgers">
      <h2>Eaten Burgers</h2>
      <ul style="list-style-type:none;">
        {{#each burger}}
        {{#if this.devoured}}
        <input class="form-control" type="text" placeholder="{{this.id}} . {{this.burger_name}}" readonly>
        {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>
  <br>
  {{!-- <h2>Add a Burger</h2> --}}
  <form class="create-form">

    <div class="form-group">
      <label for="ca"></label>
      <input class="submit" type="text" id="ca" burger_name="name">
    </div>

    <button type="submit">Submit</button>
    <p>Enter a burger you want to eat. Click the "Submit" button.</p>
  </form>
</div>