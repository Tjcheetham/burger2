<h1>Eat-Da-Burger!</h1>

<div class="container">
  <div class="row">
    <div class="col-md-1"></div>
    <div class="col-md-5 burgers">

      {{!-- <h2>Uneaten Burgers</h2> --}}
      <ul style="list-style-type:none;">
        {{#each burgers}}
        {{#unless devoured}}
        {{> burger-block devoured=true}}
        {{/unless}}
        {{/each}}
      </ul>
    </div>

    <div class="col-md-5 burgers">
      {{!-- <h2>Eaten Burgers</h2> --}}
      <ul style="list-style-type:none;">
        {{#each burgers}}
        {{#if devoured}}
        {{> burger-block devoured=false}}
        {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>
<br>
{{!-- <h2>Add a Burger</h2> --}}
<form class="create-form">

  <div class="form-group">
    <label for="ca"></label>
    <input class= "submit" type="text" id="ca" burger_name="name">
  </div>

  <button type="submit">Submit</button>
  <p>Enter a burger you want to eat. Click the "Submit" button.</p>
</form>
</div>